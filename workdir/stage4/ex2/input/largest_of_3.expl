decl
    int a,b,c;
enddecl
begin
    write("Enter 1st num:");
    read(a);
    write("Enter 2nd num:");
    read(b);
    write("Enter 3rd num:");
    read(c);
    write("Largest num:");
    if (a < b) then
        if (b < c) then write(c); 
        else write(b); 
        endif;
    else
        if (a < c) then write(c); 
        else write(a); 
        endif;
    endif;
end;